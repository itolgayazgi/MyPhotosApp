@model List<PhotosDTO>

<div class="container">
    <h2 class="text-center">My Photos</h2>

    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h4 class="text-center text-secondary">You dont have any photos yet :( </h4>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                Add Photos
            </button>
        </div>
    }
    else
    {
        <div class="text-center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                Add Photos
            </button>
        </div>
        <div class="row">

            @foreach (var photo in Model)
            {
                <div class="col-md-4 mb-4 mt-2">
                    <div class="card">
                        <img src="@Url.Action("CardDisplay", "Photo", new { id = photo.Id })" class="card-img-top" alt="Photo">
                        <div class="card-body">
                            <h5 class="card-title">@photo.Name</h5>
                            <h5 class="card-title fst-italic">@photo.Tags</h5>
                            <a href="@Url.Action("Display", "Photo", new { id = photo.Id })" class="btn btn-primary">View Photo</a>
                            <a href="@Url.Action("Delete", "Photo", new { id = photo.Id })" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    }
</div>
<div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uploadModalLabel">Add Photo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Photo" asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="form-group row mb-2">
                        <label for="name" class="col-sm-4 col-form-label">File Name: </label>
                        <div class="col-sm-8">
                            <input type="text" name="Name" id="Name" class="form-control-sm" />
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label for="Description" class="col-sm-4 col-form-label">Descript: </label>
                        <div class="col-sm-8">
                            <input type="text" name="Description" id="Description" class="form-control-sm">
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label for="tags" class="col-sm-4 col-form-label">Tags: </label>
                        <div class="col-sm-8">
                            <input type="text" name="Tags" id="Tags" class="form-control-sm" />
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label for="bytes" class="col-sm-4 col-form-label">Dosya: </label>
                        <div class="col-sm-8">
                            <input type="file" name="file" id="file" class="form-control-file">
                        </div>
                    </div>
                    <div class="text-center">
                        <button click="submit" class="btn btn-success btn-sm">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

